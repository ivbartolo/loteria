# ==========================================
# ENVIRONMENT CONFIGURATION
# ==========================================
# This file contains the template for environment variables.
# Copy this file to .env and fill in your actual values.
# NEVER commit the .env file to version control!

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application name
VITE_APP_NAME=Loteria App

# API Base URL (if you have a backend API)
VITE_API_BASE_URL=http://localhost:3000/api

# Public API URL (for client-side requests)
VITE_PUBLIC_API_URL=http://localhost:3000

# ==========================================
# SUPABASE CONFIGURATION (if using Supabase)
# ==========================================
# Supabase Project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anon/Public API Key
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (Keep this secret! Only use in server-side code)
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==========================================
# THIRD-PARTY SERVICES
# ==========================================
# Google Gemini API Key (for OCR - Lottery number detection)
VITE_GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (if using AI features)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Analytics (Google Analytics, etc.)
VITE_GA_TRACKING_ID=your_ga_tracking_id_here

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# ==========================================
# SECURITY
# ==========================================
# JWT Secret (for token-based authentication)
VITE_JWT_SECRET=your_jwt_secret_key_here

# Encryption Key (for sensitive data encryption)
VITE_ENCRYPTION_KEY=your_encryption_key_here

# ==========================================
# UPLOAD & STORAGE (if applicable)
# ==========================================
# Maximum upload size in bytes
VITE_MAX_UPLOAD_SIZE=10485760

# Storage service configuration
VITE_STORAGE_PROVIDER=local
# For cloud storage (AWS S3, etc.)
VITE_STORAGE_BUCKET_NAME=your_bucket_name
VITE_STORAGE_REGION=us-east-1
